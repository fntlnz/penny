{
    "name": "gianarb/penny",
    "description": "Another PHP framework made of other components",
    "keywords": [
        "middleware",
        "container",
        "route",
        "http-flow"
    ],
    "require": {
	"php": ">=5.4",
        "nikic/fast-route": "~0.4",
        "php-di/php-di": "~5.0",
        "zendframework/zend-diactoros": "~1.0",
        "zendframework/zend-eventmanager": "~2.4",
        "doctrine/annotations": "^1.2",
        "zendframework/zend-stdlib": "~2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "symfony/http-foundation": "~2.7.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Gianluca Arbezzano",
            "email": "gianarb92@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
          "GianArb\\Penny\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "GianArb\\PennyTest\\": "./tests",
          "TestApp\\": "./tests/app"
        }
    }
}
